<div>
  <div style="position: absolute; bottom: 2em; left: 82%; background: #e2d5cc; padding: 0.5em 2em; box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;">
    <!-- XP -->
    <span style="color: blueviolet; font-weight: bold; font-size: 1.3em;">[XP] </span>
    <span style="font-size: 1.3em;"><%= @creature.given_exp %></span>

    <!-- LIFE -->
    <span style="color: blueviolet; font-weight: bold; font-size: 1.3em;"><i class="fa-solid fa-heart"></i></span>
    <span style="font-size: 1.3em;"><%= @creature.life %></span>
    <span style="font-size: 1.3em;">/</span>
    <span style="font-size: 1.3em;"><%= @creatureOldLife%></span>

    <!-- STRENGTH -->
    <span style="color: blueviolet; font-weight: bold; font-size: 1.3em;"><i class="fa-solid fa-hand-back-fist"></i></span>
    <span style="font-size: 1.3em;"><%= @creature.strength %></span>

  </div>
</div>
