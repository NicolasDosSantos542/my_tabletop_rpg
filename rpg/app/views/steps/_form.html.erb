
<%= form_with model: step do |form| %>


  <div>
    <%= form.label :step_order %><br>
    <%= form.number_field :step_order %>
    <% step.errors.full_messages_for(:step_order).each do |message| %>
    <div style="color:red"><%= message %></div>
    <% end %>

  </div>

  <div class="select-sim" id="select-color">
    <div class="options">
      <%= form.collection_radio_buttons( :loot_id , Loot.all.order("life ASC"), :id, :image) do |b| %>
        <li> <%=b.label { b.radio_button + image_tag(b.object.image) }%></li>
      <%end%>
    </div>
  </div>


  <div class="select-sim" id="select-color">
    <div class="options">
      <%= form.collection_radio_buttons( :creature_id , Creature.all.order("strength ASC"), :id, :image) do |b| %>
        <li> <%=b.label { b.radio_button + image_tag(b.object.image) }%></li>
      <%end%>
    </div>
  </div>

 
  <div>
    <%= form.label :chapter_id %><br>
    <%= form.number_field :chapter_id %>
    <% step.errors.full_messages_for(:chapter_id).each do |message| %>
    <div style="color:red"><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :fight_next_step %><br>
    <%= form.number_field :fight_next_step %>
    <% step.errors.full_messages_for(:fight_next_step).each do |message| %>
    <div style="color:red"><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
<%if step.id %>
 

<% end%>

